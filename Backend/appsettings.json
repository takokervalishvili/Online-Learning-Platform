{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=LearningPlatform;Trusted_Connection=True;TrustServerCertificate=True;",
    "SqliteConnection": "Data Source=learningplatform.db"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForHS256Algorithm",
    "Issuer": "LearningPlatform",
    "Audience": "LearningPlatformUsers",
    "ExpiryDays": 7
  },
  "Frontend": {
    "Url": "http://localhost:4200"
  },
  "FileUpload": {
    "MaxSizeInMB": 50,
    "AllowedExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".ppt",
      ".pptx",
      ".xls",
      ".xlsx",
      ".txt",
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".mp4",
      ".avi",
      ".mov",
      ".zip",
      ".rar"
    ],
    "UploadDirectory": "uploads"
  }
}
